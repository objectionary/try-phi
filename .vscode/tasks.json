{
  "version": "2.0.0",
  "presentation": {
    "reveal": "always",
    "panel": "new"
  },
  "tasks": [
    {
      "label": "Run front",
      "command": "nix",
      "args": [
        "run",
        ".#front"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "Run back",
      "command": "nix",
      "args": [
        "run",
        ".#back"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    // App
    {
      "label": "Run app",
      "dependsOn": [
        "Run front",
        "Run back"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ]
}